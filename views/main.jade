doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(href="/assets/lib/bootstrap/css/bootstrap.min.css", rel="stylesheet")
    link(href="/assets/css/layout.css", rel="stylesheet")
    title Login to LM url shortener

  // Should not create a separate layout for this single page but no need to refactor as long as we don't need to work on design (that is, never)
  body
    nav(class="navbar navbar-inverse navbar-fixed-top", role="navigation")
      div.container
        div#navbar(class="collapse navbar-collapse")
          ul(class="nav navbar-nav")
            li
              a(href="/login") Login

    div.container
      if loginError
        br
        div.alert.alert-danger #{loginError}


